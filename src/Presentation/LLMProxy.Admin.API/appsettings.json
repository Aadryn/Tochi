{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=llmproxy;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },

  "JwtSettings": {
    "SecretKey": "your-256-bit-secret-key-change-in-production-minimum-32-characters-required",
    "Issuer": "LLMProxyAdminAPI",
    "Audience": "LLMProxyClients",
    "ExpirationMinutes": 60
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },

  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },

  "SecretProvider": {
    "Type": "EnvironmentVariable"
  }
}
