    "RetentionDays": 90,
    "EnableAsync": true,
    "BatchSize": 100
  },
  "Cache": {
    "Enabled": true,
    "DefaultTtlSeconds": 300,
    "PermissionCheckTtlSeconds": 60,
    "RoleAssignmentTtlSeconds": 300
