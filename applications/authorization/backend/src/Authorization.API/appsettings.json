{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AuthorizationDb": "Host=localhost;Port=15432;Database=authorization;Username=postgres;Password=password",
    "Redis": "localhost:6379"
  },
